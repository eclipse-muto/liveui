{
  "name": "{{ name }}",
  "version": "0.0.2",
  "private": true,
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    {{#if isTypescript}}"tsdx-start": "tsdx watch",
    "lib-build": "tsdx build",
    "tsdx-test": "tsdx test --passWithNoTests",
    "lint": "tsdx lint",
    "tsdx-prepare": "tsdx build",
    "size": "size-limit",{{else}}
    "lib-build": "rollup -c --exports auto",{{/if}}
    "start": "liveui start",
    "build": "liveui build",
    "docker": "docker build -t liveui/{{ name }}:latest ./docker/",
    "docker-run": "docker run --rm -it -p 5001:80 liveui/{{ name }}:latest"
  },
  "dependencies": {
  },
  "peerDependencies": {
    "react": ">=16",
    "react-dom": ">=16",
    "react-scripts": "5.0.1",
    "web-vitals": "^2.1.4"
  },
  "devDependencies": {
    "@eclipse-muto/liveui": "0.1.7",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "5.0.1",
    {{#if isTypescript}}"@babel/preset-typescript": "^7.18.6",
    "@size-limit/preset-small-lib": "^8.1.0",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.2",
    "husky": "^8.0.1",
    "size-limit": "^8.1.0",
    "tsdx": "^0.14.1",
    "tslib": "^2.4.0",
    "typescript": "^4.8.3"{{else}}
    "@rollup/plugin-babel": "^5.3.1",
    "@rollup/plugin-commonjs": "^22.0.2",
    "@rollup/plugin-node-resolve": "^14.1.0",
    "rollup": "^2.79.0",
    "rollup-plugin-generate-package-json": "^3.2.0"
    {{/if}}
  }
}
