{
  "name": "{{ name }}",
  "version": "0.0.2",
  "private": true,
  "scripts": {
    "android": "react-native run-android --port 5010",
    "ios": "react-native run-ios --port 5010",
    "start": "concurrently \"react-native start --port 5010\" \"liveui start-native\"  ",
    "start-live": "liveui start-native",
    "build": "liveui build-native",
    "test": "jest",
    "lint": "eslint .",
    "docker": "docker build -t {{ name }}:latest ./docker/",
    "docker-run": "docker run --rm -dit -p 5001:80 {{ name }}:latest"
  },
  "dependencies": {
    "react": "18.1.0",
    "react-native": "0.70.6"
  },
  "devDependencies": {
    "@babel/core": "^7.12.9",
    "@babel/runtime": "^7.12.5",
    "@eclipse-muto/liveui": "0.1.13",
    "@react-native-community/eslint-config": "^2.0.0",
    
    {{#if isTypescript}}
    "@tsconfig/react-native": "^2.0.2",
    "@types/jest": "^26.0.23",
    "@types/react": "^18.0.21",
    "@types/react-native": "^0.70.6",
    "@types/react-test-renderer": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.37.0",
    "@typescript-eslint/parser": "^5.37.0",
    "typescript": "^4.8.3",{{/if}}

    "babel-jest": "^26.6.3",
    "eslint": "^7.32.0",

    "babel-loader": "^8.1.0",
    "css-loader": "^3.5.3",
    "file-loader": "^6.0.0",
    "html-loader": "^1.1.0",
    "image-webpack-loader": "^6.0.0",
    "style-loader": "^1.2.1",
    "svg-url-loader": "^5.0.0",
    "url-loader": "^4.1.0",
    "concurrently": "^5.2.0",

    "jest": "^26.6.3",
    "metro-react-native-babel-preset": "0.72.3",
    "react-test-renderer": "18.1.0"
  },
  "jest": {
    "preset": "react-native",
    "moduleFileExtensions": [
      {{#if isTypescript}}"ts",
      "tsx",{{/if}}
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
